acl "trusted" {
        127.0.0.0/8;
        10.0.10.0/24;  # MGMT 
        10.0.20.0/24;  # CORP-LAN 
        10.0.40.0/24;  # APP-LOGIC 
        10.0.50.0/24;  # DB
        10.0.60.0/24;  # SEC
};

options {
    directory "/var/cache/bind";

    
    listen-on { 127.0.0.1; 10.0.10.5; }; 

    
    allow-query { trusted; }; 

    allow-transfer { none; };

    forwarders { 1.1.1.1; };
    recursion yes;
    
    dnssec-validation auto;
};